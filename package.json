{
  "name": "modest-mongo",
  "version": "1.0.1",
  "description": "Modest MongoDB API wrapper",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/tiaanduplessis/modest-mongo",
    "type": "git"
  },
  "homepage": "https://github.com/tiaanduplessis/modest-mongo",
  "bugs": "https://github.com/tiaanduplessis/modest-mongo",
  "main": "src/index.js",
  "files": ["src/index.js"],
  "scripts": {
    "test": "jest",
    "lint": "standard src/**",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run test",
    "docs": "documentation build src/** -f html -o docs",
    "pretest": "npm run format && npm run lint:fix",
    "format": "prettier --print-width 100 --semi false --single-quote --write src/**",
    "precommit": "npm test",
    "release": "npm test && git commit -am $npm_package_version && git tag $npm_package_version && git push --tags && npm publish"
  },
  "author": "tiaanduplessis <tiaanduplessis@hotmail.com>",
  "devDependencies": {
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "prettier": "~1.5.2",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "mongodb": "^2.2.28",
    "obj-validate": "^2.0.1",
    "samesame": "^1.0.1"
  }
}
